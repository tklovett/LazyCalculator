<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="1" >

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="1"
            android:onClick="subtract"
            android:text="-" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="add"
            android:text="+" />

        <Button
            android:id="@+id/buttonSolve"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:onClick="solve"
            android:text="=" />

        <Button
            android:id="@+id/button8"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="2"
            android:onClick="insert8"
            android:text="8" />

        <Button
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="insert7"
            android:text="7" />

        <Button
            android:id="@+id/button4"
            android:layout_gravity="left"
            android:onClick="insert4"
            android:text="4" />

        <Button
            android:id="@+id/button1"
            android:layout_gravity="left"
            android:onClick="insert1"
            android:text="1" />

        <Button
            android:id="@+id/button0"
            android:layout_gravity="left"
            android:onClick="insert0"
            android:text="0" />

        <Button
            android:id="@+id/button9"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="2"
            android:onClick="insert9"
            android:text="9" />

        <Button
            android:id="@+id/button2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="4"
            android:onClick="insert2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="4"
            android:onClick="insert3"
            android:text="3" />

        <Button
            android:id="@+id/button5"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="3"
            android:onClick="insert5"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="3"
            android:onClick="insert6"
            android:text="6" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="5"
            android:onClick="insertDecimal"
            android:text="." />

        <Button
            android:id="@+id/buttonNegate"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="5"
            android:onClick="addParenthesis"
            android:text="(" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="multiply"
            android:text="x" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:onClick="divide"
            android:text="÷" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:onClick="backspace"
            android:text="←" />

    </GridLayout>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_alignParentTop="true"
        android:onClick="clear"
        android:text="Clear" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button19"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button19"
        android:layout_toRightOf="@+id/button19"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>